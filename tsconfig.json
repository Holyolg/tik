{
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/shared/components/shared/header.tsx",
		"src/shared/components/shared/video.tsx",
		"src/shared/components/shared/page-component/cards-list-with-category/MainCards.tsx"
	],
	"exclude": ["node_modules"]
}
